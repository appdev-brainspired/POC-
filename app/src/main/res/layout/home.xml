<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FF">  <!-- Light blue background -->

    <!-- Add a card view for better elevation and styling -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent">
        <!-- GURU Text -->

        <TextView
            android:id="@+id/tvGuru"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:layout_gravity="end"
            android:layout_margin="16dp"
            android:fontFamily="sans-serif-medium"

            android:text="GURU"
            android:textColor="#2196F3"
            android:textSize="55sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="185dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/screenshot_2025_01_29_at_3_10_08_pm_removebg_preview" />

    </androidx.cardview.widget.CardView>

    <!-- Main Content Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Name Section -->
            <TextView
                android:id="@+id/tvNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:text="Name"
                android:textColor="#666666"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvNameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="Mitesh"
                android:textColor="#1976D2"
                android:textSize="32sp"
                android:textStyle="bold" />

            <!-- Divider -->
            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:background="#E0E0E0" />

            <!-- Therapy Duration Section -->
            <TextView
                android:id="@+id/tvTherapyLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:text="Therapy Duration"
                android:textColor="#666666"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvTherapyValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="16 out of 30 mins"
                android:textColor="#4CAF50"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Divider -->
            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:background="#E0E0E0" />

            <!-- Stimulation Current Section -->
            <TextView
                android:id="@+id/tvStimulationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:text="Stimulation Current"
                android:textColor="#666666"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvStimulationValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="2 mA"
                android:textColor="#FF5722"
                android:textSize="28sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>
